# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C++ source files
[*.{cpp,h,hpp,c,cc,cxx,hxx,inl}]
indent_size = 4

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_size = 4

# GLSL shaders
[*.{vert,frag,geom,tesc,tese,comp,glsl}]
indent_size = 4

# YAML files (GitHub Actions, configs)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git config
[.git*]
indent_size = 4
